<div class="container" style="margin-top:60px;">
<div class="jumbotron">
<h2 style="text-align:center;">Informacion</h2>
<div class="table-responsive">

<table class="table table-bordered table-hover">
  <thead>
    <tr class="info">
      <th>Contenido informacion</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @informacions.each do |informacion| %>
      <tr>
        <td><%= informacion.contenido_informacion %></td>
        <td><%= link_to 'Ver', informacion, :class => 'btn btn-success' %></td>
        <td><%= link_to 'Editar', edit_informacion_path(informacion), :class => 'btn btn-warning' %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
</div>
<%= link_to "Atras", :back, :class => "btn btn-primary" %>
</div>
</div>