<div class="container" style="margin-top:60px;">
<div class="jumbotron">
<h2 style="text-align:center;">Listado de Servicios</h2>
<div class="table-responsive">

<table class="table table-bordered table-hover">
  <thead>
    <tr class="info">
      <th>Nombre servicio</th>
      <th>Descripcion servicio</th>
      <th>Imagen</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @servicios.each do |servicio| %>
      <tr>
        <td><%= servicio.nombre_servicio %></td>
        <td><%= servicio.descripcion_servicio %></td>
        <td><img src="<%= servicio.foto.url %>" width="150px;"></td>
        <td><%= link_to 'Editar', edit_servicio_path(servicio), :class=>"btn btn-warning" %></td>
        <td><%= link_to 'Borrar', servicio, method: :delete, data: { confirm: 'Esta seguro que desea eliminar este servicio?' }, :class=>"btn btn-danger" %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Nuevo Servicio', new_servicio_path, :class=>"btn btn-primary" %>
<%= link_to 'Atras', :back, :class=>"btn btn-primary" %>
</div>
</div>
</div>