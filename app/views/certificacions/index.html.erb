<div class="container" style="margin-top:60px;">
<div class="jumbotron">
<h2 style="text-align:center;">Listado de certificaciones</h2>
<div class="table-responsive">

<table class="table table-bordered table-hover">
  <thead>
    <tr class="info">
      <th>Titulo certificacion</th>
      <th>Descripcion certificacion</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @certificacions.each do |certificacion| %>
      <tr>
        <td><%= certificacion.titulo_certificacion %></td>
        <td><%= certificacion.descripcion_certificacion %></td>
        <td><%= link_to 'Ver', certificacion, :class => 'btn btn-success' %></td>
        <td><%= link_to 'Editar', edit_certificacion_path(certificacion), :class => "btn btn-warning" %></td>
        <td><%= link_to 'Borrar', certificacion, method: :delete, data: { confirm: 'Are you sure?' }, :class => "btn btn-danger" %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Nueva certificacion', new_certificacion_path, :class=>"btn btn-primary" %>
<%= link_to 'Atras', :back, :class=>"btn btn-primary" %>
</div>
</div>
</div>