<div class="container" style="margin-top:60px;">
<div class="jumbotron">
<h2 style="text-align:center;">Listado de mensajes</h2>
<div class="table-responsive">
<table class="table table-bordered table-hover">
  <thead>
    <tr class="info">
      <th>Nombre</th>
      <th>Correo electronico</th>
      <th>Telefono</th>
      <th>Mensaje</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @contactos.each do |contacto| %>
      <tr>
        <td><%= contacto.nombre %></td>
        <td><%= contacto.correo_electronico %></td>
        <td><%= contacto.telefono %></td>
        <td><%= contacto.mensaje %></td>
        <td ><%= link_to 'Ver',contacto, :class => 'btn btn-success'%></td>
        <td><%= link_to 'Borrar', contacto, :class=>'btn btn-warning' ,method: :delete, data: { confirm: 'Esta seguro que desea borrar este mensaje?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
</div>
<br>
<%= link_to 'Atras', :back, :class=>"btn btn-primary" %>
</div>
</div>